@model IEnumerable<IHFF_Websystem.Models.ViewWishlist>
@{
    ViewBag.Title = "Wishlist";
}

<h2>Wishlist</h2>
@Html.ValidationSummary()
@using (Html.BeginForm())
{
    <p> 
        Codeword: @Html.TextBox("codeword")
        <input type="submit" name="codeword" value="WishlistLaden" />         
    </p> 
    <p>
        @Html.ActionLink("Reserveren", "Reserveren", "Wishlist", new { wishlist = ViewBag.wishlist})
    </p>
}
<table>
<tr>
    <th>Evenement Naam</th>
    <th></th>
    <th>StartTijd</th>
    <th></th>
    <th>Prijs</th>
    <th></th>
    <th>Locatie</th>
    <th></th>
</tr>
@try { 
foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.name)</td>
        <td> @Html.DisplayFor(modelItem => item.starttijd)</td>
        <td>@Html.DisplayFor(modelItem => item.prijs)</td>
        <td>@Html.DisplayFor(modelItem => item.locatie)</td>
        <td>@Html.ActionLink("Delete", "Delete", "Wishlist", null)/td>
    </tr>
}
}
catch{
    <tr></tr>
    }
</table>




