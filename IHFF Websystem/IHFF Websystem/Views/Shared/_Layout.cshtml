                <div id="wishlistbasket-inner"></div>
            </div>
        @Html.ActionLink("Reserveren", "Reserveren", "Wishlist", null, new { @id = "wishlistbasket-button" })
        </div>
    <nav>
        <ul id="navigatie">
            <li>
                <a href="index.html">
                    <p class="navtext">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "navvtext" })
                    </p>
                </a>
            </li>
            <li>
                <a href="index.html">
                    <p class="navtext">
                        @Html.ActionLink("Programma", "Woensdag", "Programma", null, new { @class = "navvtext" })
                    </p>
                </a>
            </li>
            <li>
                <a href="index.html">
                    <p class="navtext">
                        @Html.ActionLink("Locaties", "Locaties", "Home", null, new { @class = "navvtext" })
                    </p>
                </a>
            </li>
            <li>
                <a href="index.html">
                    <p class="navtext">
                        @Html.ActionLink("Dineren", "Dineren", "Home", null, new { @class = "navvtext" })
                    </p>
                </a>
            </li>
            <li>
                <a href="index.html">
                    <p class="navtext">
                        @Html.ActionLink("Over ons", "Overons", "Home", null, new { @class = "navvtext" })
                    </p>
                </a>
            </li>
        </ul>
    </nav>
    <section id="banner">
        <div>
            <img src="../../Images/haarlem4.png" />
        </div>
        <div>
            <img src="../../Images/haarlem1.jpg" />
        </div>
        <div>
            <img src="../../Images/haarlem2.jpg" />
        </div>
    </section>
    <section id="nav2">
        <ul id="navigatie2">
            <li>
                <a href="index.html">
                    <p class="navtext">
                        @Html.ActionLink("Woensdag", "Woensdag", "Programma", null, new { @class = "navvtext" })
                    </p>
                </a>
            </li>
            <li>
                <a href="index.html">
                    <p class="navtext">
                        @Html.ActionLink("Donderdag", "Donderdag", "Programma", null, new { @class = "navvtext" })
                    </p>
                </a>
            </li>
            <li>
                <a href="index.html">
                    <p class="navtext">
                        @Html.ActionLink("Vrijdag", "Vrijdag", "Programma", null, new { @class = "navvtext" })
                    </p>
                </a>
            </li>
            <li>
                <a href="index.html">
                    <p class="navtext">
                        @Html.ActionLink("Zaterdag", "Zaterdag", "Programma", null, new { @class = "navvtext" })
                    </p>
                </a>
            </li>
            <li>
                <a href="index.html">
                    <p class="navtext">
                        @Html.ActionLink("Zondag", "Zondag", "Programma", null, new { @class = "navvtext" })
                    </p>
                </a>
            </li>
        </ul>
    </section>
    <section id="main">
        @RenderSection("featured", required: false)
        <section class="classs">
            @RenderBody()
        </section>
    </section>
    <footer>
        @Html.ActionLink("Sitemap", "Sitemap", "Home", null, new { @class = "footertext" })
        @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "footertext" })
        @Html.ActionLink("Over ons", "Overons", "Home", null, new { @class = "footertext" })
        @Html.ActionLink("Celluloid Silver", "Contact", "Home", null, new { @class = "footertext" })

        <div id="footerwrapper">
            <h4>Vragen? Stuur ons een mail!</h4>
            @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "footerbutton" })
        </div>
        <div id="footerwrapper2">
            <h4>Volg ons op social media!</h4>
            <div id="footerimageswrapper">
            <a href="http://www.facebook.com"><img src="../../Images/facebook.png" /></a>
            <a href="http://www.twitter.com"><img src="../../Images/twitter.png" /></a>
            </div>
        </div>
    </footer>
</body>
</html>

