<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - International Haarlem Film Festival</title>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/popupStyle.css")
    @Styles.Render("~/Content/ProgramButtons.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Content/JavaScript01.js")
    @Scripts.Render("~/Content/jsPopup.js")
    <script>

    </script>
    @RenderSection("JavaScript", required: false)    
</head>

<body>
    <header style="margin-top:0; padding-top:1px;">
        <div class="medewerkerlink">@Html.ActionLink("Medewerker","login","Medewerker", null, new { @class = "medewerkertext" }) </div>
            <div id="whishlistlink"><a href="#">Wishlist</a></div>
</header>
    <!-- Wishlist popup right corner-->

    <div id="wishlistbasket">
        @Html.ActionLink("Wish-List", "Index", "Wishlist", null, new { @id = "wishlistHeader" })
